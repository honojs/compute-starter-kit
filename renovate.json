{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "schedule": [
    "after 2am"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "hono"
      ],
      "rangeStrategy": "pin"
    }
  ]
}